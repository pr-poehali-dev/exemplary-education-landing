{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "Get all registrations",
      "method": "GET",
      "path": "/?action=registrations",
      "expectedStatus": 200,
      "expectedBody": {
        "registrations": "array"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Get content",
      "method": "GET",
      "path": "/?action=content",
      "expectedStatus": 200,
      "expectedBody": {
        "content": "object"
      },
      "bodyMatcher": "partial"
    }
  ]
}
